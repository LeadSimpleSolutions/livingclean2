  <script>
    function submitDemoForm(e){
      if(e) e.preventDefault();
      // simple demo behavior — replace with production submission
      var name = (document.getElementById('c-name') || document.getElementById('name')).value || '';
      var phone = (document.getElementById('c-phone') || document.getElementById('phone')).value || '';
      var status = document.getElementById('contactStatus') || document.getElementById('formStatus');
      if(!name || !phone){ status.textContent = 'Please provide your name and phone number.'; return; }
      status.textContent = 'Thanks — we will follow up shortly.';
      // in production, POST to your backend or integrate a form service
    }
  </script>

